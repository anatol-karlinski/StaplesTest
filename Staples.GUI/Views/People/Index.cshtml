@model List<Staples.DAL.Models.Person>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-muted">
    LIST OF PEOPLE
</h1>
<hr />
<table class="table table-bordered table-hover" id="people-table">
    <thead>
        <tr>
            <th scope="col">
                <div>
                    Nr.
                </div>
            </th>
            <th scope="col">
                First name
            </th>
            <th scope="col">
                Last name
            </th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Count(); i++)
        {
            <tr>
                <th scope="row">
                    @(i+1)
                </th>
                <td>
                    @Model[i].FirstName
                </td>
                <td>
                    @Model[i].LastName
                </td>
            </tr>
        }
    </tbody>
</table>
<a href="/People/Create" class="btn btn-dark" role="button">New person</a>